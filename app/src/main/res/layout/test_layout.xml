<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_alamatweb"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Website"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/brown_1"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/website_loading"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/website_kudi"
                android:textSize="15sp"
                android:textColor="@color/brown_1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_instagram"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Instagram"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/brown_1"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/instagram_loading"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/instagram_kudi"
                android:textSize="15sp"
                android:textColor="@color/brown_1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_lokasi"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Alamat"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/brown_1"
                    android:textStyle="bold"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/alamat_loading"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <TextView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/alamat_kudit"
                android:textSize="15sp"
                android:textColor="@color/brown_1"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>